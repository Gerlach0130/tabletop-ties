<div class="card text-bg-dark text-center m-4">
    <div class="card-header">
        {{name}}
    </div>
    <div class="card-body">
        <h5 class="card-title">Username: {{username}}</h5>
        <h6 class="card-subtitle mb-3 text-muted">Location: {{location}}</h6>
        <a href="/users/{{id}}" class="btn btn-dark">View Profile</a>
        <!-- Additional user information can go here -->
        {{#if interested_games}}
        <p class="card-text">Games interested in:
            {{#each interested_games}}{{this}}, {{/each}}
        </p>
        {{/if}}
    </div>
</div>